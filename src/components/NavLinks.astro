---
import Button from '@tailus-ui/Button'
const currentPath = Astro.url.pathname

const navlinks = [
    {
        name: 'Documentation',
        href: '/get-started/installation',
    },
    {
        name: 'Blocks',
        href: '/blocks',
    },
    {
        name: 'Themer',
        href: 'https://themer.tailus.io',
    },
    {
        name: 'Templates',
        href: 'https://tailus.io/templates',
    },
]

const { asPill = false } = Astro.props
---

<ul class="flex w-fit flex-col gap-6 lg:flex-row lg:items-center lg:gap-3" class:list={asPill && 'lg:gap-0'} data-shade="900">
    {
        navlinks.map((link) => (
            <li>
                <Button.Root data-rounded="full" variant={currentPath.includes(link.href) ? 'soft' : 'ghost'} intent="gray" size="xs" href={link.href} className="justify-start">
                    <Button.Label>{link.name}</Button.Label>
                </Button.Root>
            </li>
        ))
    }
</ul>
