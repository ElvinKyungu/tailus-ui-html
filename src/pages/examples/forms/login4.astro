---
import BaseHead from '@components/BaseHead.astro';
import '@styles/pagefind.css';
import '@styles/color-theme.css';
import Card from '@react-ui/card/Card';
import Button from '@react-ui/button/Button';
import { Text, Link, Caption, Title } from '@components/typography';
import Input from '@react-ui/input/Input';
import Label from '@react-ui/label/Label';
import BrandIcon from '@components/utilities/BrandIcon';
---

<!doctype html>
<html class="dark" lang="en" data-palette="tls" data-shade="900" data-rounded="large">
    <head>
        <BaseHead title="Login Page 5 | Tailus UI React" />
    </head>
    <body class="antialiased bg-gray-50 dark:[--body-text-color:theme(colors.gray.300)] dark:bg-gray-950 font-sans">
        <main class="relative px-6 py-24 lg:py-12 lg:px-0 lg:absolute z-10 lg:max-w-full lg:w-screen m-auto inset-0 h-fit">
            <div class="max-w-md mx-auto">
                <Card variant="mixed" className="p-10 sm:p-12 mb-20 dark:border shadow-lg shadow-gray-950/5">
                    <div>
                        <BrandIcon className="size-8" />
                        <Title size="xl" className="mt-8 mb-1">Sign In to Tailus UI</Title>
                        <Text className="my-0" size="sm">Welcome back! Sign in to continue</Text>
                    </div>
                    <form data-shade="800" class="mb-8 space-y-6">
                        <div class="space-y-6 shadow-sm rounded-[--btn-radius] shadow-gray-500/5">
                            <div class="space-y-4">
                                <div class="space-y-2.5">
                                    <Label size="sm" htmlFor="email" className="sr-only">Your email</Label>
                                    <Input id="email" name="email" type="email" required variant="bottomOutlined" size="lg" placeholder="Your email" />
                                </div>
                            </div>
                        </div>
                        <Button.Root className="w-full">
                            <Button.Label>Continue</Button.Label>
                        </Button.Root>
                    </form>
                    <Caption className="my-0" size="sm">
                        Don't have an account ?
                        <Link intent="neutral" size="sm" variant="underlined" href="/examples/forms/register3">Create account</Link>
                    </Caption>
                </Card>
                <Caption>By proceeding, you consent to get calls, WhatsApp or SMS messages, including by automated means, from Tailus and its affiliates to the number provided.</Caption>
            </div>
        </main>
    </body>
</html>
