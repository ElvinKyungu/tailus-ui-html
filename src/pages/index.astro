<script>
    let timeoutId;
    const herosection = document.querySelector('[data-herosection]');
    const footer = document.querySelector('[data-footer]');

    const handleScroll = event => {
        if (timeoutId !== null) {
            clearTimeout(timeoutId);
        }

        const scrollPercentage = window.scrollY / (document.body.scrollHeight - window.innerHeight);

        herosection!.style.transform = `scale(${1 - scrollPercentage})`;
        herosection!.style.opacity = `${1 - scrollPercentage * 12.5}`;

        if (scrollPercentage > 0.8) {
            footer!.style.opacity = `${scrollPercentage}`;
            footer!.style.transform = `scale(${scrollPercentage})`;
            footer!.style.display = 'grid';
        } else {
            footer!.style.opacity = '0';
            footer!.style.transform = `scale(0)`;
            footer!.style.display = 'none';
        }
    };

    document.addEventListener('scroll', event => {
        handleScroll(event);
    });
</script>

