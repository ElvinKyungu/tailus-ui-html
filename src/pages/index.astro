---
import Layout from '@layouts/BaseLayout.astro';
import Container from '@components/Container.astro';
import { CustomizerPill } from '@components/customizer/Pill';
---

<Layout title="Tailus UI Html">
    <CustomizerPill client:load />
    <section class="pt-12 lg:pt-32 md:pt-20 space-y-12">
        <Container>
            <span class="annonce mixed xs">
                <span class="annonce-concern lg soft success">New</span>
                <span class="text-title">Introduction Tailus UI Html</span>
            </span>
            <div class="progress md">
                <div class="progress-indicator success w-[60%]"></div>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-4">
                <div class="space-y-2">
                    <button class="btn solid xl primary">Generate</button>
                    <button class="btn solid md secondary">Generate</button>
                    <button class="btn solid md accent">Generate</button>
                    <button class="btn solid md info">Generate</button>
                    <button class="btn solid md danger">Generate</button>
                    <button class="btn solid md success">Generate</button>
                    <button class="btn solid md warning">Generate</button>
                    <button class="btn solid md gray">Generate</button>
                    <button class="btn solid md neutral">Generate</button>
                </div>
                <div class="space-y-2">
                    <button class="btn outlined md primary">Generate</button>
                    <button class="btn outlined md secondary">Generate</button>
                    <button class="btn outlined md accent">Generate</button>
                    <button class="btn outlined md info">Generate</button>
                    <button class="btn outlined md danger">Generate</button>
                    <button class="btn outlined md success">Generate</button>
                    <button class="btn outlined md warning">Generate</button>
                    <button class="btn outlined md gray">Generate</button>
                    <button class="btn outlined md neutral">Generate</button>
                </div>
                <div class="space-y-2">
                    <button class="btn soft md primary">Generate</button>
                    <button class="btn soft md secondary">Generate</button>
                    <button class="btn soft md accent">Generate</button>
                    <button class="btn soft md info">Generate</button>
                    <button class="btn soft md danger">Generate</button>
                    <button class="btn soft md success">Generate</button>
                    <button class="btn soft md warning">Generate</button>
                    <button class="btn soft md gray">Generate</button>
                    <button class="btn soft md neutral">Generate</button>
                </div>
                <div class="space-y-2">
                    <button class="btn ghost md primary">Generate</button>
                    <button class="btn ghost md secondary">Generate</button>
                    <button class="btn ghost md accent">Generate</button>
                    <button class="btn ghost md info">Generate</button>
                    <button class="btn ghost md danger">Generate</button>
                    <button class="btn ghost md success">Generate</button>
                    <button class="btn ghost md warning">Generate</button>
                    <button class="btn ghost md gray">Generate</button>
                    <button class="btn ghost md neutral">Generate</button>
                </div>
            </div>

            <form action="" class="card outlined">
                <div class="callout gray flex gap-2.5">
                    <svg class="text-title" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"> <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path><path d="M12 8v4"></path><path d="M12 16h.01"></path></svg>
                    <div>
                        <div class="callout-title text-sm">An error occured!</div>
                        <div class="callout-description text-sm">New sales from the last subscribers - 20K USD in revenue.</div>
                        <a href="" class="callout-link text-sm">Details</a>
                    </div>
                </div>
                <div class="field">
                    <label for="email" class="text-title">Your name</label>
                    <select name="email" id="email" class="input mixed md appearance-none">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                    </select>
                    <span class="text-caption text-sm">Info here</span>
                </div>

                <a href="" class="link animated neutral">Tailus</a>
                <button type="submit" class="btn outlined xl primary">Generate</button>
            </form>
            <div class="flex gap-3 items-end">
                <div class="avatar xxs">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar xs">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar sm">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar md">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar lg">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar xl">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar xxl">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
                <div class="avatar xxxl">
                    <img src="https://tailus.io/images/reviews/rodrigo.webp" alt="" />
                </div>
            </div>
            <div class="grid grid-cols-2 w-fit gap-4">
                <div class="space-y-4">
                    <div class="avatar md fallback-solid primary">MI</div>
                    <div class="avatar md fallback-solid secondary">MI</div>
                    <div class="avatar md fallback-solid accent">MI</div>
                    <div class="avatar md fallback-solid info">MI</div>
                    <div class="avatar md fallback-solid danger">MI</div>
                    <div class="avatar md fallback-solid success">MI</div>
                    <div class="avatar md fallback-solid warning">MI</div>
                    <div class="avatar md fallback-solid gray">MI</div>
                </div>
                <div class="space-y-4">
                    <div class="avatar md fallback-soft primary">MI</div>
                    <div class="avatar md fallback-soft secondary">MI</div>
                    <div class="avatar md fallback-soft accent">MI</div>
                    <div class="avatar md fallback-soft info">MI</div>
                    <div class="avatar md fallback-soft danger">MI</div>
                    <div class="avatar md fallback-soft success">MI</div>
                    <div class="avatar md fallback-soft warning">MI</div>
                    <div class="avatar md fallback-soft gray">MI</div>
                </div>
            </div>
        </Container>
    </section>
</Layout>
